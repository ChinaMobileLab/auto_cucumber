class Scenario <  ActiveRecord::Base
	include ScenarioHelper

	attr_accessor :sc_type, :sc_when, :sc_then
	has_many :given_conditions, :class_name => "GivenCondition"
	accepts_nested_attributes_for :given_conditions

	def initialize( attributes = {} )
		attributes.each_pair do |key, value|
			send "#{key}=", value
		end

	end

	def persisted?
    false
  end

  def save_to_file
		File.open("features_created/test.feature", "a") do |file|
			file.puts to_s
			file.puts
		end
  end

end

class GivenCondition <  ActiveRecord::Base
	attr_accessor :text
end